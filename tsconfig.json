{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2015",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "removeComments": false,
    "declaration": true
  },
  "include": ["./src/main/**/*.ts"]
}
